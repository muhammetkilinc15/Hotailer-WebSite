@model List<TestimoniaViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <td>#</td>
        <td>Referans Adı</td>
        <td>Regerans Unvanı</td>
        <td>Görsel</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.TestimonialID</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Image</td>
            <td><a href="/Testimonial/DeleteStaff/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Testimonial/AddTestimonial" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Staff Ekle</a>

