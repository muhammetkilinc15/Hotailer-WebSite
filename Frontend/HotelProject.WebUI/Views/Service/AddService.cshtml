@model CreateServiceDto
@{
	ViewData["Title"] = "AddService";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
	<div class="form-group">
		<label>Hizmet Başlığı</label>
		<input type="text" class="input-rounded form-control" asp-for="Title" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>Hizmet İkonu</label>
		<input type="text" class="input-rounded form-control" asp-for="ServiceIcon" />
		<span asp-validation-for="ServiceIcon" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>Açıklama</label>
		<input type="text" class="input-rounded form-control" asp-for="Description" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<button class="btn mb-1 btn-rounded btn-outline-dark">Hizmeti Ekle</button>

</form>


