@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Servisler</h2>

<table class="table table-hover">
    <tr>
        <td>#</td>
        <td>Hizmet Başlığı</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            
            <th>@count</th>
            <td>@item.Title</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn mb-1 btn-rounded btn-outline-secondary">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Service/AddService" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Hizmet Ekle</a>

