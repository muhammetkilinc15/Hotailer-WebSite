@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
	@Html.HiddenFor(x=>x.ServiceID)
	<div class="form-group">
		<label>Hizmet Başlığı</label>
		<input type="text" class="input-rounded form-control" asp-for="Title"  value="@Model.Title"/>
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>Hizmet İkonu</label>
		<input type="text" class="input-rounded form-control" asp-for="ServiceIcon"  value="@Model.ServiceIcon"/>
		<span asp-validation-for="ServiceIcon" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label>Açıklama</label>
		<input type="text" class="input-rounded form-control" asp-for="Description"  value="@Model.Description"/>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<button class="btn mb-1 btn-rounded btn-outline-dark">Hizmeti Güncelle</button>

</form>

