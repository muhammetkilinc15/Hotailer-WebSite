<form>
    <div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="row justify-content-center">
            <div class="col-lg-10 border rounded p-1">
                <div class="border rounded text-center p-1">
                    <div class="bg-white rounded text-center p-5">
                        <h4 class="mb-4">Mail Bültenine <span class="text-primary text-uppercase">Abone Olun</span></h4>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input id="mailBltn" class="form-control w-100 py-3 ps-4 pe-5" type="email" required placeholder="Email adresinizi giriniz">
                            <button id="btnClick" type="button" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">Gönder</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Spinner -->
<div id="spinner" class="bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-none align-items-center justify-content-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Yükleniyor...</span>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    $(document).ready(function () {
        $("#btnClick").click(function () {
            var mail = $("#mailBltn").val();
            $.ajax({
                type: "POST",
                async: true,
                contentType: "application/json",
                url: "/Default/_SendSubscribe?mail=" + mail,
                success: function (data) {
                    // Spinner gizle
                    $('#spinner').addClass('d-none');
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı!',
                        text: 'Mailiniz iletilmiştir.',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Tamam'
                    });
                },
                error: function (xhr, status, error) {
                    // Spinner gizle
                    $('#spinner').addClass('d-none');
                    alert("Error: " + error);
                }
            });
        });
    });
</script>
