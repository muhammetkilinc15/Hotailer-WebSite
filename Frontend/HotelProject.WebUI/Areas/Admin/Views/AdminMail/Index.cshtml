@model AdminMailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
    <div class="form-group">
        <label>Mail Adresi</label>
        <input type="email" class="form-control" asp-for="RecieverMail">
    </div>
    <div class="form-group">
        <label>Konu</label>
        <input type="text" class="form-control" asp-for="Subject">
    </div>

    <div class="form-group">
        <label>Mesajınız</label>
        <textarea  rows="10" cols="10" class="form-control" asp-for="Body"></textarea>
    </div>
    <button class="btn btn-primary">Maili Gönder</button>
</form>
