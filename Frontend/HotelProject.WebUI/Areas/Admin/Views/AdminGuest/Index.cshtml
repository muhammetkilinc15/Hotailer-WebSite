@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


<table class="table table-hover">
    <tr>
        <td>#</td>
        <td>Adı</td>
        <td>Soyadı</td>
        <td>Şehir</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Suname</td>
            <td>@item.City</td>
            <td><a href="/Admin/AdminGuest/DeleteGuest/@item.GuestId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/AdminGuest/UpdateGuest/@item.GuestId" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminGuest/AddGuest" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Misafir Ekle</a>

