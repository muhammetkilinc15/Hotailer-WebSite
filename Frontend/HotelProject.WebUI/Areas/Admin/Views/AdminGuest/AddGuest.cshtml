@model CreateGuestDto
@{
	ViewData["Title"] = "AddRoom";
	Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
	<div class="form-group">
		<label>Misafir Adı</label>
		<input type="text" class="input-rounded form-control" asp-for="Name" />
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label>Misafir Soyadı</label>
		<input type="text" class="input-rounded form-control" asp-for="Suname" />
		<span class="text-danger" asp-validation-for="Suname"></span>
	</div>
	<div class="form-group">
		<label>Misafir Şehri</label>
		<input type="text" class="input-rounded form-control" asp-for="City" />
		<span class="text-danger" asp-validation-for="City"></span>
	</div>


	<button class="btn mb-1 btn-rounded btn-outline-dark" type="submit">Misafiri Ekle</button>

</form>


