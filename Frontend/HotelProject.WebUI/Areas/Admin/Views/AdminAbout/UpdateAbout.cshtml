@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
	Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
	<div class="form-group">
		<label>Hakkımızda Başlık 1</label>
		<input type="text" class="input-rounded form-control" asp-for="Title1" value="@Model.Title1" />
	</div>
	<div class="form-group">
		<label>Hakkımızda Başlık 2</label>
		<input type="text" class="input-rounded form-control" asp-for="Title2" value="@Model.Title2" />
	</div>
	<div class="form-group">
		<label>Hakkımızda İçerik</label>
		<input type="text" class="input-rounded form-control" asp-for="Content" value="@Model.Content" />
	</div>
	<button class="btn mb-1 btn-rounded btn-outline-dark">Hakkındayı Güncelle</button>

</form>

